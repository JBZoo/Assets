{
    "name"              : "jbzoo/assets",
    "type"              : "library",
    "description"       : "Manage any asset files (js, css, less) and their depending + compressing and merging",
    "license"           : "MIT",
    "keywords"          : ["javascript", "js", "css", "less", "assets", "compress"],
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"  : "Sergey Kalistratov",
            "email" : "kalistratov.s.m@gmail.com"
        }
    ],

    "require"           : {
        "php"         : ">=7.2",
        "jbzoo/utils" : "^4.0.0",
        "jbzoo/path"  : "^3.0.0",
        "jbzoo/less"  : "^4.0.0",
        "jbzoo/data"  : "^4.0.0"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev"  : "^2.0.0",
        "symfony/filesystem" : "^4.4|^5.0"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Assets\\" : "src"
        }
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "3.0.x-dev"
        }
    }
}
