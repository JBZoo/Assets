{
    "name"         : "jbzoo/assets",
    "type"         : "library",
    "description"  : "Manage any asset files (js, css, less) and their depending + compressing and merging",
    "license"      : "MIT",
    "keywords"     : ["javascript", "js", "css", "less", "assets", "compress"],
    "authors"      : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"  : "Sergey Kalistratov",
            "email" : "kalistratov.s.m@gmail.com"
        }
    ],

    "require"      : {
        "php"         : ">=7.4",

        "jbzoo/utils" : "^4.5|^5.0",
        "jbzoo/path"  : "^4.0",
        "jbzoo/less"  : "^5.0",
        "jbzoo/data"  : "^4.3|^5.0"
    },

    "require-dev"  : {
        "jbzoo/toolbox-dev"  : "^3.2|^4.0.1",
        "symfony/filesystem" : ">=5.2.3"
    },

    "autoload"     : {
        "psr-4" : {
            "JBZoo\\Assets\\" : "src"
        }
    },

    "autoload-dev" : {
        "classmap" : ["tests"]
    },

    "config"       : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {
            "composer/package-versions-deprecated" : true
        }
    },

    "extra"        : {
        "branch-alias" : {
            "dev-master" : "4.x-dev"
        }
    }
}
